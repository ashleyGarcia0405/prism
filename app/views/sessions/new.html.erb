<div class="min-h-screen flex items-center justify-center bg-slate-900">
  <div class="max-w-md w-full bg-slate-800 rounded-lg shadow-2xl p-8 border border-slate-700">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-blue-400 mb-2">Prism</h1>
      <p class="text-gray-400">Privacy-Preserving Analytics Platform</p>
    </div>

    <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= label_tag :email, "Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= email_field_tag :email, nil,
            class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
            placeholder: "you@example.com",
            required: true,
            autofocus: true %>
      </div>

      <div>
        <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= password_field_tag :password, nil,
            class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
            placeholder: "••••••••",
            required: true %>
      </div>

      <div>
        <%= submit_tag "Sign In",
            class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200 font-medium" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-400">
        Don't have an account?
        <%= link_to "Create one", register_path, class: "text-blue-400 hover:text-blue-300 font-medium" %>
      </p>
    </div>
  </div>
</div>