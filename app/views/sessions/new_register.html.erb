<div class="min-h-screen flex items-center justify-center bg-slate-900 py-12">
  <div class="max-w-md w-full bg-slate-800 rounded-lg shadow-2xl p-8 border border-slate-700">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-blue-400 mb-2">Prism</h1>
      <p class="text-gray-400">Create Your Account</p>
    </div>

    <%= form_with url: register_path, method: :post, class: "space-y-6" do |f| %>
      <div class="border-b border-slate-700 pb-4 mb-4">
        <h3 class="text-lg font-medium text-gray-200 mb-4">Your Information</h3>

        <div class="space-y-4">
          <div>
            <%= label_tag 'user[name]', "Full Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= text_field_tag 'user[name]', nil,
                class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
                placeholder: "Dr. Alice Chen",
                required: true,
                autofocus: true %>
          </div>

          <div>
            <%= label_tag 'user[email]', "Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= email_field_tag 'user[email]', nil,
                class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
                placeholder: "alice@hospital.org",
                required: true %>
          </div>

          <div>
            <%= label_tag 'user[password]', "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= password_field_tag 'user[password]', nil,
                class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
                placeholder: "••••••••",
                required: true,
                minlength: 6 %>
            <p class="text-xs text-gray-500 mt-1">Minimum 6 characters</p>
          </div>

          <div>
            <%= label_tag 'user[password_confirmation]', "Confirm Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= password_field_tag 'user[password_confirmation]', nil,
                class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
                placeholder: "••••••••",
                required: true %>
          </div>
        </div>
      </div>

      <div class="border-b border-slate-700 pb-4 mb-4">
        <h3 class="text-lg font-medium text-gray-200 mb-4">Organization</h3>

        <div>
          <%= label_tag 'organization[name]', "Organization Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= text_field_tag 'organization[name]', nil,
              class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
              placeholder: "Memorial Hospital",
              required: true %>
          <p class="text-xs text-gray-500 mt-1">This will be your organization's workspace</p>
        </div>
      </div>

      <div class="bg-blue-900 bg-opacity-30 border-l-4 border-blue-500 p-4 rounded">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-200">
              Your account will be automatically logged in after registration.
            </p>
          </div>
        </div>
      </div>

      <div>
        <%= submit_tag "Create Account",
            class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200 font-medium" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-400">
        Already have an account?
        <%= link_to "Sign in", login_path, class: "text-blue-400 hover:text-blue-300 font-medium" %>
      </p>
    </div>
  </div>
</div>