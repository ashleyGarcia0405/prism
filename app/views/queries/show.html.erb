<% content_for :title, "Query ##{@query.id} - Prism" %>

<div class="max-w-6xl mx-auto">
  <div class="mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-100 mb-2">Query #<%= @query.id %></h1>
        <p class="text-gray-400">Dataset: <%= link_to @query.dataset.name, dataset_path(@query.dataset), class: "text-blue-400 hover:text-blue-300" %></p>
      </div>
      <% if @runs.empty? || @runs.first.status == 'failed' %>
        <%= button_to "Execute Query", execute_query_path(@query), method: :post, class: "bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition font-medium" %>
      <% end %>
    </div>
  </div>

  <!-- Query Details -->
  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6 mb-6">
    <h2 class="text-xl font-bold text-gray-100 mb-4">Query Details</h2>
    <div class="bg-slate-900 p-4 rounded-lg mb-4 border border-slate-700">
      <pre class="text-sm font-mono overflow-x-auto text-blue-300"><%= @query.sql %></pre>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div>
        <p class="text-sm text-gray-400">Estimated Epsilon</p>
        <p class="text-2xl font-bold text-gray-100"><%= number_with_precision(@query.estimated_epsilon, precision: 2) %>ε</p>
      </div>
      <div>
        <p class="text-sm text-gray-400">Created By</p>
        <p class="font-medium text-gray-200"><%= @query.user.name %></p>
      </div>
      <div>
        <p class="text-sm text-gray-400">Created</p>
        <p class="font-medium text-gray-200"><%= time_ago_in_words(@query.created_at) %> ago</p>
      </div>
      <div>
        <p class="text-sm text-gray-400">Executions</p>
        <p class="font-medium text-gray-200"><%= @runs.count %></p>
      </div>
    </div>
  </div>

  <!-- Execution History -->
  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg">
    <div class="px-6 py-4 border-b border-slate-700">
      <h2 class="text-xl font-bold text-gray-100">Execution History</h2>
    </div>

    <% if @runs.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-900">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Run ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Epsilon Consumed</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Execution Time</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Started</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-700">
            <% @runs.each do |run| %>
              <tr class="hover:bg-slate-700 transition">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-200">
                  #<%= run.id %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_class = case run.status
                      when 'completed' then 'bg-green-900 bg-opacity-50 text-green-300 border border-green-700'
                      when 'pending' then 'bg-yellow-900 bg-opacity-50 text-yellow-300 border border-yellow-700'
                      when 'failed' then 'bg-red-900 bg-opacity-50 text-red-300 border border-red-700'
                      else 'bg-slate-700 text-gray-300'
                      end %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_class %>">
                    <%= run.status %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                  <% if run.epsilon_consumed %>
                    <%= number_with_precision(run.epsilon_consumed, precision: 3) %>ε
                  <% else %>
                    —
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                  <% if run.execution_time_ms %>
                    <%= run.execution_time_ms %>ms
                  <% else %>
                    —
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= time_ago_in_words(run.created_at) %> ago
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "View Results", run_path(run), class: "text-blue-400 hover:text-blue-300" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <p class="text-gray-400 mb-4">This query has not been executed yet</p>
        <%= button_to "Execute Now", execute_query_path(@query), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "← Back to Queries", queries_path, class: "text-blue-400 hover:text-blue-300" %>
  </div>
</div>