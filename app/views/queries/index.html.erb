<% content_for :title, "Queries - Prism" %>

<div class="flex justify-between items-center mb-8">
  <div>
    <h1 class="text-3xl font-bold text-gray-100 mb-2">Queries</h1>
    <p class="text-gray-400">View all privacy-preserving queries</p>
  </div>
  <%= link_to "Select Dataset to Create Query", datasets_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition font-medium" %>
</div>

<% if @queries.any? %>
  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-slate-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">SQL</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Dataset</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Estimated ε</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-700">
          <% @queries.each do |query| %>
            <% last_run = query.runs.order(created_at: :desc).first %>
            <tr class="hover:bg-slate-700 transition">
              <td class="px-6 py-4">
                <code class="text-xs bg-slate-900 text-blue-300 p-1 rounded"><%= truncate(query.sql, length: 80) %></code>
              </td>
              <td class="px-6 py-4 text-sm text-gray-200">
                <%= link_to query.dataset.name, dataset_path(query.dataset), class: "text-blue-400 hover:text-blue-300" %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-200">
                <%= number_with_precision(query.estimated_epsilon, precision: 2) %>ε
              </td>
              <td class="px-6 py-4">
                <% if last_run %>
                  <% status_class = case last_run.status
                      when 'completed' then 'bg-green-900 bg-opacity-50 text-green-300 border border-green-700'
                      when 'pending' then 'bg-yellow-900 bg-opacity-50 text-yellow-300 border border-yellow-700'
                      when 'failed' then 'bg-red-900 bg-opacity-50 text-red-300 border border-red-700'
                      else 'bg-slate-700 text-gray-300'
                      end %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= status_class %>">
                    <%= last_run.status %>
                  </span>
                <% else %>
                  <span class="text-sm text-gray-500">Not executed</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-400">
                <%= time_ago_in_words(query.created_at) %> ago
              </td>
              <td class="px-6 py-4 text-sm font-medium space-x-2">
                <%= link_to "View", query_path(query), class: "text-blue-400 hover:text-blue-300" %>
                <% if !last_run || last_run.status == 'failed' %>
                  <%= button_to "Execute", execute_query_path(query), method: :post, class: "inline text-green-400 hover:text-green-300" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-12 text-center">
    <svg class="mx-auto h-16 w-16 text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    <h3 class="text-xl font-medium text-gray-200 mb-2">No queries yet</h3>
    <p class="text-gray-400 mb-6">Create your first privacy-preserving query from a dataset.</p>
    <%= link_to "Go to Datasets", datasets_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% end %>