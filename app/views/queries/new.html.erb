<% content_for :title, "New Query - Prism" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-100 mb-2">Create Privacy-Preserving Query</h1>
    <p class="text-gray-400">Write a SQL query with automatic differential privacy protection</p>
  </div>

  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6">
    <%= form_with model: @query, class: "space-y-6" do |f| %>
      <% if @query.errors.any? %>
        <div class="bg-red-900 bg-opacity-50 border border-red-500 text-red-200 px-4 py-3 rounded">
          <h3 class="font-bold mb-2">Validation Errors:</h3>
          <ul class="list-disc list-inside">
            <% @query.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :dataset_id, "Dataset", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.collection_select :dataset_id, @datasets, :id, :name,
            { prompt: "Select a dataset..." },
            class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100",
            required: true %>
      </div>

      <div>
        <%= f.label :sql, "SQL Query", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_area :sql,
            rows: 12,
            class: "w-full px-4 py-2 font-mono text-sm bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
            placeholder: "SELECT state, AVG(age), COUNT(*)\nFROM patients\nGROUP BY state\nHAVING COUNT(*) >= 25",
            required: true %>
        <p class="text-sm text-gray-400 mt-2">Write a DP-safe SQL query using aggregate functions</p>
      </div>

      <!-- Security Rules Info Box -->
      <div class="bg-blue-900 bg-opacity-30 border-l-4 border-blue-500 p-4 rounded">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-200 font-medium mb-2">Required Safety Rules:</p>
            <ul class="text-sm text-blue-200 space-y-1 list-disc list-inside">
              <li>Must use aggregate functions (COUNT, AVG, SUM, MIN, MAX)</li>
              <li>Must include GROUP BY clause</li>
              <li>Must include HAVING COUNT(*) >= 25 (k-anonymity)</li>
              <li>No SELECT * allowed</li>
              <li>No subqueries allowed</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Example Queries -->
      <details class="bg-slate-900 bg-opacity-50 rounded-lg p-4 border border-slate-700">
        <summary class="cursor-pointer font-medium text-gray-300 hover:text-gray-100">View Example Queries</summary>
        <div class="mt-4 space-y-4">
          <div>
            <p class="text-sm font-medium text-green-400 mb-1">Valid: Average age by state</p>
            <pre class="bg-slate-800 border border-slate-700 p-3 rounded text-xs overflow-x-auto text-gray-300"><code>SELECT state, AVG(age), COUNT(*)
FROM patients
GROUP BY state
HAVING COUNT(*) >= 25</code></pre>
          </div>
          <div>
            <p class="text-sm font-medium text-green-400 mb-1">Valid: Count by diagnosis</p>
            <pre class="bg-slate-800 border border-slate-700 p-3 rounded text-xs overflow-x-auto text-gray-300"><code>SELECT diagnosis, COUNT(*)
FROM patients
GROUP BY diagnosis
HAVING COUNT(*) >= 25</code></pre>
          </div>
          <div>
            <p class="text-sm font-medium text-red-400 mb-1">Invalid: SELECT * not allowed</p>
            <pre class="bg-slate-800 border border-slate-700 p-3 rounded text-xs overflow-x-auto text-gray-300"><code>SELECT * FROM patients</code></pre>
          </div>
          <div>
            <p class="text-sm font-medium text-red-400 mb-1">Invalid: Missing HAVING clause</p>
            <pre class="bg-slate-800 border border-slate-700 p-3 rounded text-xs overflow-x-auto text-gray-300"><code>SELECT state, AVG(age)
FROM patients
GROUP BY state</code></pre>
          </div>
        </div>
      </details>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", queries_path, class: "px-6 py-2 border border-slate-600 rounded-lg text-gray-300 hover:bg-slate-700 transition" %>
        <%= f.submit "Create Query", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium" %>
      </div>
    <% end %>
  </div>
</div>