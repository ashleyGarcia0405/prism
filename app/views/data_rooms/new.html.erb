<% content_for :title, "New Data Room - Prism" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-100 mb-2">Create Data Room</h1>
    <p class="text-gray-400">Set up a secure multi-party computation space</p>
  </div>

  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6">
    <%= form_with model: @data_room, url: data_rooms_path, class: "space-y-6" do |f| %>
      <% if @data_room.errors.any? %>
        <div class="bg-red-900 bg-opacity-50 border border-red-500 text-red-200 px-4 py-3 rounded">
          <h3 class="font-bold mb-2">Errors:</h3>
          <ul class="list-disc list-inside">
            <% @data_room.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Data Room Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_field :name,
            class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
            placeholder: "e.g., Multi-Hospital Patient Analysis",
            required: true %>
      </div>

      <div>
        <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_area :description,
            rows: 3,
            class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
            placeholder: "Describe the purpose of this collaborative analysis..." %>
      </div>

      <div>
        <%= f.label :query_type, "Query Type", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.select :query_type,
            options_for_select([["COUNT - Count records", "count"], ["SUM - Sum values", "sum"], ["AVG - Average values", "avg"]], "count"),
            {},
            class: "w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100" %>
        <p class="text-sm text-gray-400 mt-1">MPC currently supports COUNT, SUM, and AVG operations</p>
      </div>

      <div>
        <%= f.label :query_text, "Query Description", class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.text_area :query_text,
            rows: 6,
            class: "w-full px-4 py-2 font-mono text-sm bg-slate-700 border border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-100 placeholder-gray-500",
            placeholder: "Describe what you want to compute across all organizations' datasets...\nExample: COUNT(*) WHERE age > 18",
            required: true %>
        <p class="text-sm text-gray-400 mt-1">This will be validated against all participating datasets' schemas</p>
      </div>

      <!-- Info Box -->
      <div class="bg-purple-900 bg-opacity-20 border-l-4 border-purple-500 p-4 rounded">
        <div class="flex">
          <svg class="h-5 w-5 text-purple-400 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
          <div class="text-sm text-purple-200">
            <p class="font-medium mb-1">How Data Rooms Work:</p>
            <ol class="list-decimal list-inside space-y-1">
              <li>Create the data room with your query</li>
              <li>Invite other organizations to participate</li>
              <li>Each organization attests with their dataset</li>
              <li>Once all participants attest, execute the MPC computation</li>
              <li>Get results without seeing individual raw data</li>
            </ol>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", data_rooms_path, class: "px-6 py-2 border border-slate-600 rounded-lg text-gray-300 hover:bg-slate-700 transition" %>
        <%= f.submit "Create Data Room", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium" %>
      </div>
    <% end %>
  </div>
</div>