<% content_for :title, "Query Results - Prism" %>

<div class="max-w-6xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-100 mb-2">Query Results</h1>
    <p class="text-gray-400">Run #<%= @run.id %> for <%= @dataset.name %></p>
  </div>

  <!-- Status Card -->
  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6 mb-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <% case @run.status
           when 'completed' %>
          <div class="bg-green-900 bg-opacity-50 p-3 rounded-full">
            <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-green-400">Completed</p>
            <p class="text-sm text-gray-400">Query executed successfully</p>
          </div>
        <% when 'pending' %>
          <div class="bg-yellow-900 bg-opacity-50 p-3 rounded-full animate-pulse">
            <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-yellow-400">Pending</p>
            <p class="text-sm text-gray-400">Query is being executed...</p>
          </div>
        <% when 'failed' %>
          <div class="bg-red-900 bg-opacity-50 p-3 rounded-full">
            <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <div>
            <p class="text-2xl font-bold text-red-400">Failed</p>
            <p class="text-sm text-gray-400">Query execution failed</p>
          </div>
        <% end %>
      </div>

      <% if @run.status == 'pending' %>
        <button onclick="location.reload()" class="px-4 py-2 bg-slate-700 text-gray-300 rounded-lg hover:bg-slate-600 border border-slate-600">
          Refresh
        </button>
      <% end %>
    </div>
  </div>

  <!-- Auto-refresh for pending runs -->
  <% if @run.status == 'pending' %>
    <meta http-equiv="refresh" content="3">
  <% end %>

  <!-- Query Info -->
  <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6 mb-6">
    <h2 class="text-xl font-bold text-gray-100 mb-4">Query Details</h2>
    <div class="bg-slate-900 border border-slate-700 p-4 rounded-lg">
      <pre class="text-sm font-mono overflow-x-auto text-blue-300"><%= @query.sql %></pre>
    </div>
    <div class="mt-4 grid grid-cols-2 md:grid-cols-4 gap-4">
      <div>
        <p class="text-sm text-gray-400">Dataset</p>
        <p class="font-medium"><%= link_to @dataset.name, dataset_path(@dataset), class: "text-blue-400 hover:text-blue-300" %></p>
      </div>
      <div>
        <p class="text-sm text-gray-400">Estimated Epsilon</p>
        <p class="font-medium text-gray-200"><%= number_with_precision(@query.estimated_epsilon, precision: 2) %>ε</p>
      </div>
      <div>
        <p class="text-sm text-gray-400">Backend</p>
        <p class="font-medium text-gray-200"><%= @run.backend_used || 'dp_sandbox' %></p>
      </div>
      <div>
        <p class="text-sm text-gray-400">Created</p>
        <p class="font-medium text-gray-200"><%= time_ago_in_words(@run.created_at) %> ago</p>
      </div>
    </div>
  </div>

  <!-- Results -->
  <% if @run.status == 'completed' %>
    <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6 mb-6">
      <h2 class="text-xl font-bold text-gray-100 mb-4">Results</h2>
      <% if @run.result.present? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-slate-900">
              <tr>
                <% @run.result.first.each do |key, _| %>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                    <%= key %>
                  </th>
                <% end %>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-700">
              <% if @run.result.is_a?(Hash) %>
                <tr class="hover:bg-slate-700 transition">
                  <% @run.result.each do |_, value| %>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                      <%= value.is_a?(Float) ? number_with_precision(value, precision: 2) : value %>
                    </td>
                  <% end %>
                </tr>
              <% elsif @run.result.is_a?(Array) %>
                <% @run.result.each do |row| %>
                  <tr class="hover:bg-slate-700 transition">
                    <% row.each do |_, value| %>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                        <%= value.is_a?(Float) ? number_with_precision(value, precision: 2) : value %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-400">No results available</p>
      <% end %>
    </div>

    <!-- Privacy Metrics -->
    <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-bold text-gray-100 mb-4">Privacy Metrics</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <p class="text-sm text-gray-400 mb-1">Epsilon Consumed</p>
          <p class="text-2xl font-bold text-red-400"><%= number_with_precision(@run.epsilon_consumed, precision: 3) %>ε</p>
        </div>
        <div>
          <p class="text-sm text-gray-400 mb-1">Execution Time</p>
          <p class="text-2xl font-bold text-gray-100"><%= @run.execution_time_ms %>ms</p>
        </div>
        <div>
          <p class="text-sm text-gray-400 mb-1">DP Mechanism</p>
          <p class="text-2xl font-bold text-gray-100"><%= @run.proof_artifacts&.dig('mechanism')&.capitalize || 'Unknown' %></p>
        </div>
      </div>

      <% if @run.proof_artifacts.present? %>
        <details class="mt-6">
          <summary class="cursor-pointer font-medium text-gray-300 hover:text-gray-100">View Proof Artifacts</summary>
          <pre class="mt-2 bg-slate-900 border border-slate-700 p-4 rounded text-xs overflow-x-auto text-gray-300"><%= JSON.pretty_generate(@run.proof_artifacts) %></pre>
        </details>
      <% end %>
    </div>

  <% elsif @run.status == 'failed' %>
    <div class="bg-red-900 bg-opacity-30 border border-red-500 rounded-lg p-6">
      <h2 class="text-xl font-bold text-red-300 mb-2">Error Details</h2>
      <p class="text-red-200"><%= @run.error_message %></p>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "← Back to Query", query_path(@query), class: "text-blue-400 hover:text-blue-300" %>
  </div>
</div>